<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Recipes</title>
  </head>
  <body>
    <% @recipes.each do |r| %>
    <a href="/recipes/<%= r.id %>"><h3><%= "#{r.name}" %></h3></a>
    <p><%= "#{r.ingredients}" %></p>
    <p><%= "#{r.cook_time}" %></p>
    <% end %>
  </body>
</html>
